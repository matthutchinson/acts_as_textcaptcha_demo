<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= textcaptcha_fields(f) do %>
    <p>Quick spam check to prove you're a human! (you have <strong>2 minutes</strong> to answer)</p>
    <div class="field textcaptcha">
      <%= f.label :textcaptcha_answer, @comment.textcaptcha_question %>
      <p>
        <%= f.text_field :textcaptcha_answer, value: '' %>
      </p>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<hr/>
<p><small><em>(<a href="/">reload this page</a> to see a different question)</em></small></p>
